<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/temp_background">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logo"
        android:outlineAmbientShadowColor="@color/black"
        android:outlineSpotShadowColor="@color/black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="15dp"
        android:layout_margin="30dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/log_in_back"
        android:outlineAmbientShadowColor="@color/black"
        android:outlineSpotShadowColor="@color/black"
        android:inputType="text"
        android:selectAllOnFocus="true"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="15dp"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:gravity="center"
            android:outlineAmbientShadowColor="@color/black"
            android:outlineSpotShadowColor="@color/black"
            android:inputType="text"
            android:selectAllOnFocus="true"
            >
            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textDirection="rtl"
                android:layout_marginEnd="5dp"
                android:text="هانیه ملائی"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"/>
            <TextView
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textDirection="rtl"
                android:layout_marginEnd="5dp"
                android:text="Haniye_Mli"
                android:textSize="14sp"
                android:textColor="@color/colorPrimaryDark"/>
            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textDirection="rtl"
                android:layout_marginEnd="5dp"
                android:text="HaniyeMolaei1378@gmail.com"
                android:textSize="14sp"
                android:textColor="@color/colorPrimaryDark"/>
            <TextView
                android:id="@+id/website"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textDirection="rtl"
                android:layout_marginEnd="5dp"
                android:text="https://github.com/HaniyeMollaei"
                android:textSize="14sp"
                android:textColor="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textDirection="rtl"
                android:layout_marginEnd="5dp"
                android:text="دانشگاه شهید بهشتی"
                android:textSize="14sp"
                android:textColor="@color/colorPrimaryDark"/>
            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textDirection="rtl"
                android:layout_marginEnd="5dp"
                android:text="تهران - ولنجک - بلوار دانشجو"
                android:textSize="14sp"
                android:textColor="@color/colorPrimaryDark"/>
            <TextView
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textDirection="rtl"
                android:layout_marginEnd="5dp"
                android:text="09122223333"
                android:textSize="14sp"
                android:textColor="@color/colorPrimaryDark"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="20dp"
            >

            <Button
                android:layout_gravity="center"
                android:id="@+id/back_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/btn_background"
                android:textColor="@color/colorAccent"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="بازگشت"
                android:layout_marginEnd="10dp"
                android:outlineAmbientShadowColor="@color/black"
                android:outlineSpotShadowColor="@color/black"
                />
            />

            <Button
                android:layout_gravity="center"
                android:id="@+id/edit_btn"
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_background"
                android:textColor="@color/colorAccent"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="ویرایش"
                android:layout_marginStart="10dp"
                android:outlineAmbientShadowColor="@color/black"
                android:outlineSpotShadowColor="@color/black"
                />
            />
        </LinearLayout>

    </LinearLayout>

    </LinearLayout>